{
  "name": "optimize-images",
  "version": "1.0.0",
  "description": "Script para optimizar im√°genes de NexoLab",
  "scripts": {
    "optimize": "node optimize-images.js",
    "optimize:webp": "imagemin public/*.{jpg,jpeg,png} --out-dir=public/optimized --plugin=webp --plugin.webp.quality=80",
    "optimize:jpeg": "imagemin public/*.{jpg,jpeg,png} --out-dir=public/optimized --plugin=mozjpeg --plugin.mozjpeg.quality=85",
    "generate-sizes": "node generate-responsive-images.js"
  },
  "devDependencies": {
    "imagemin": "^8.0.1",
    "imagemin-webp": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "sharp": "^0.32.0"
  }
}
